#arrivals-table.w-100 data-arrivals-target="table"
  - @arrivals.each do |platform, trains|
    h2.text-xl.font-bold.mt-4.mb-2.text-primary
      = t('arrivals.platform', platform: platform)
    table.table.table-zebra.table-auto
      thead
        tr.text-left.text-accent
          th
          th
            = t('arrivals.table.heading.line')
          th.max-md:hidden
            = t('arrivals.table.heading.current_location')
          th
            = t('arrivals.table.heading.destination')
          th
            = t('arrivals.table.heading.arrival')
      tbody
        - trains.each_with_index do |train, index|
          tr.text-left
            th
              = index + 1
            td.py-4
              = train['lineName']
            td.max-md:hidden.py-4
              = train['currentLocation']
            td.py-4
              = train['destinationName']
            td.py-4
              .text-primary
                = t('arrivals.table.time_to_station', count: (train['timeToStation'] / 60.0).floor)
